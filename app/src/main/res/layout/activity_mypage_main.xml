<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mypagelogo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/cloglogo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="164dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/HomeBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#00ff0000"
            android:text="HOME"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/weatherBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#00ff0000"
            android:text="weather"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/closetBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#00ff0000"
            android:text="closet"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/communityBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#00ff0000"
            android:text="community"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mypageperson"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/loginperson"
        android:layout_gravity="center"/>

    <android.widget.Button
        android:id="@+id/Editprofile"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:background="#BFCBE5"
        android:text="프로필 편집"
        android:textColor="@color/black" />

    <android.widget.Button
        android:id="@+id/writelist"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:background="#BFCBE5"
        android:text="작성한 글"
        android:textColor="@color/black" />

    <android.widget.Button
        android:id="@+id/mypagelogout"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:background="#BFCBE5"
        android:text="로그아웃"
        android:textColor="@color/black" />

    <android.widget.Button
        android:id="@+id/mypageout"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginBottom="110dp"
        android:layout_gravity="center"
        android:background="#BFCBE5"
        android:text="탈퇴"
        android:textColor="@color/black" />
</LinearLayout>
